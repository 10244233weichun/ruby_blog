<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Content</th>
      <th>項目</th>
      <th>分類</th>
      <th>照片</th>
      <th>新增</th>
      <th>編輯</th>
      <th>刪除</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.category_id %></td>
        <td><%= post.category.try(:name)|| '未分類' %></td>
        <td><%= image_tag post.avatar.middle %></td>
        <td><%= link_to 'Show', post ,class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_post_path(post) ,class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' ,class: "btn btn-success"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path ,class: "btn btn-success" %>
